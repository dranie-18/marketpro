---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Marketpro - Platform Jual Beli Online Terpercaya</title>
    <meta name="robots" content="index, follow" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="Marketpro" />
  </head>
  <body>
    <header class="bg-white shadow-sm">
      <nav class="container mx-auto px-4 py-4">
        <div class="flex justify-between items-center">
          <a href="/" class="text-2xl font-bold text-blue-600">Marketpro</a>
          <div class="space-x-4">
            <a href="/jual" class="text-gray-600 hover:text-blue-600">Pasang Iklan</a>
            <a href="/kategori" class="text-gray-600 hover:text-blue-600">Kategori</a>
            <a href="/tentang" class="text-gray-600 hover:text-blue-600">Tentang</a>
          </div>
        </div>
      </nav>
    </header>
    <slot />
    <footer class="bg-gray-100 mt-12">
      <div class="container mx-auto px-4 py-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="font-bold text-lg mb-4">Marketpro</h3>
            <p class="text-gray-600">Platform jual beli online terpercaya di Indonesia</p>
          </div>
          <div>
            <h3 class="font-bold text-lg mb-4">Tautan</h3>
            <ul class="space-y-2">
              <li><a href="/tentang" class="text-gray-600 hover:text-blue-600">Tentang Kami</a></li>
              <li><a href="/kontak" class="text-gray-600 hover:text-blue-600">Kontak</a></li>
              <li><a href="/syarat-ketentuan" class="text-gray-600 hover:text-blue-600">Syarat & Ketentuan</a></li>
              <li><a href="/kebijakan-privasi" class="text-gray-600 hover:text-blue-600">Kebijakan Privasi</a></li>
            </ul>
          </div>
          <div>
            <h3 class="font-bold text-lg mb-4">Hubungi Kami</h3>
            <p class="text-gray-600">Email: info@marketpro.id</p>
            <p class="text-gray-600">Telepon: (021) 1234-5678</p>
          </div>
        </div>
        <div class="text-center mt-8 pt-8 border-t border-gray-200">
          <p class="text-gray-600">&copy; {new Date().getFullYear()} Marketpro. Hak Cipta Dilindungi.</p>
        </div>
      </div>
    </footer>
  </body>
</html>